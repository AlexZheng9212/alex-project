{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "coverage", "dist", "test", "*.js"]
}
